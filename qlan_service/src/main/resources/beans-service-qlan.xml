<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jaxws="http://cxf.apache.org/jaxws"
	xmlns:jaxrs="http://cxf.apache.org/jaxrs"
	xsi:schemaLocation=" http://www.springframework.org/schema/beans 
http://www.springframework.org/schema/beans/spring-beans.xsd 
http://cxf.apache.org/jaxrs
http://cxf.apache.org/schemas/jaxrs.xsd
http://cxf.apache.org/jaxws 
http://cxf.apache.org/schemas/jaxws.xsd">

	<!-- Beans definition for module EST -->
	<jaxrs:server id="usersService" address="/usersService">
		<jaxrs:providers>
			<ref bean="jsonProvider" />
		</jaxrs:providers>
		<jaxrs:serviceBeans>
			<bean id="usersClass"
				class="com.viettel.qlan.rest.UsersServiceImpl" />
		</jaxrs:serviceBeans>
	</jaxrs:server>
	<jaxrs:server id="userAlertsService" address="/userAlertServiceRest">
		<jaxrs:providers>
			<ref bean="jsonProvider" />
		</jaxrs:providers>
		<jaxrs:serviceBeans>
				<bean id="userAlertsClass" class="com.viettel.qlan.rest.UserAlertsServiceImpl" />
		</jaxrs:serviceBeans>
	</jaxrs:server>
	
	<jaxrs:server id="areaService" address="/areaServiceRest">
		<jaxrs:providers>
			<ref bean="jsonProvider" />
		</jaxrs:providers>
		<jaxrs:serviceBeans>
			<bean id="areaClass"
				class="com.viettel.qlan.rest.AreaServiceImpl" />
		</jaxrs:serviceBeans>

	</jaxrs:server>
	<jaxrs:server id="deptService" address="/deptService">
		<jaxrs:providers>
			<ref bean="jsonProvider" />
		</jaxrs:providers>
		<jaxrs:serviceBeans>
				<bean id="deptClass" class="com.viettel.qlan.rest.DeptServiceImpl" />
		</jaxrs:serviceBeans>
	</jaxrs:server>	
	
	<jaxrs:server id="restContainer1" address="/fileservice">
		<jaxrs:serviceBeans>
			<bean class="com.viettel.qlan.rest.FileServiceImpl" />
		</jaxrs:serviceBeans>
		<jaxrs:providers>
			<ref bean="jsonProvider" />
			<ref bean="exceptionMapper" />
		</jaxrs:providers>
	</jaxrs:server>
	
	<jaxrs:server id="objectsService" address="/objectsService">
		<jaxrs:providers>
			<ref bean="jsonProvider" />
		</jaxrs:providers>
		<jaxrs:serviceBeans>
				<bean id="objectsClass" class="com.viettel.qlan.rest.ObjectsServiceImpl" />
		</jaxrs:serviceBeans>
	</jaxrs:server>

</beans>